#include <iostream>
using namespace std;

void subv(int k);
void subp(int * p);
void subr(int &k);

int main(void)
{
	int n = 5;
	int & k = n;

	cout << k << endl;
	cout << &n << " " << &k << endl;

	subv(n);
	subp(&n);
	cout << n << endl; // 100
	subr(n);
	cout << n << endl; // 0
}

void subr(int &k) // int &k = n;
{
	k = 0;
}
void subp(int * p) // int * p = &n;
{
	*p = 100;
}
void subv(int k) // int k = n; // int k(n);
{
	k = 0;
}
